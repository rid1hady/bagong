<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bagong: URL Shortener</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h1>Bagong: URL Shortener</h1>
        <form action="/shortUrls" method="POST" class="my-4 form-inline">
            <label for="fullUrl" class="sr-only">URL</label>
            <input required type="url" placeholder="URL" name="fullUrl" id="fullUrl" class="form-control col mr-2"  onblur="checkURL(this)"/>
            <button type="submit" class="btn btn-success">Shorten</button>
        </form>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Full URL</th>
                    <th scope="col">Short URL</th>
                    <th scope="col">Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(shortUrl => { %>
                    <tr>
                      <td><a href="<%= shortUrl.fullUrl %>"><%= shortUrl.fullUrl %></a></td>
                      <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
                      <td><%= shortUrl.clicks %></td>
                    </tr>
                  <% }) %>
            </tbody>
        </table>
    </div>
</body>
<script>
    function checkURL(url) {
        var newUrl = url.value;
        if (!~newUrl.indexOf("http")) {
            newUrl = "http://" + newUrl;
        }
        url.value = newUrl;
        return url;
    }
</script>
</html>
